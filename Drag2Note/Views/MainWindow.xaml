<Window x:Class="Drag2Note.Views.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Drag2Note.ViewModels"
        xmlns:components="clr-namespace:Drag2Note.Views.Components"
        mc:Ignorable="d"
        Title="Drag2Note-Lite Dashboard" Height="680" Width="400"
        MinWidth="400" MaxWidth="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.InputBindings>
        <KeyBinding Key="Q" Modifiers="Alt" Command="{Binding FocusSearchCommand}"/>
        <!-- Global Delete Shortcut for Selected Item -->
        <KeyBinding Key="Delete" Command="{Binding DeleteItemCommand}"/>
        <!-- Global Backspace Shortcut for Toggling Todo (Check/Uncheck) -->
        <KeyBinding Key="Back" Command="{Binding ToggleTodoStatusCommand}" CommandParameter="{Binding SelectedItem}"/>
    </Window.InputBindings>

    <Window.Resources>
        <Style TargetType="Control">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="15,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="0.95" Duration="0:0:0.05"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="0.95" Duration="0:0:0.05"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.05"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.05"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TrafficLightButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <Border x:Name="bg" CornerRadius="12" Background="Transparent" Width="20" Height="20"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1A000000"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.2" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.2" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                             <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="0.9" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="0.9" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.2" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.2" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="Transparent" CornerRadius="16" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F0F2F5"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="0.9" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="0.9" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="ListBoxItem">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="#EDF2F7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                   <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="0.95" Duration="0:0:0.05"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="0.95" Duration="0:0:0.05"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.05"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.05"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="5"/>
            <Setter Property="MinWidth" Value="5"/>
            <Setter Property="MaxWidth" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" SnapsToDevicePixels="True" Width="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <Track x:Name="PART_Track" IsDirectionReversed="True" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#CBD5E0" CornerRadius="2.5"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" 
                                                  CanContentScroll="{TemplateBinding CanContentScroll}" 
                                                  CanHorizontallyScroll="False" 
                                                  CanVerticallyScroll="False" 
                                                  Content="{TemplateBinding Content}" 
                                                  ContentTemplate="{TemplateBinding ContentTemplate}" 
                                                  Margin="{TemplateBinding Padding}"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                     Grid.Column="1" 
                                     Value="{TemplateBinding VerticalOffset}" 
                                     Maximum="{TemplateBinding ScrollableHeight}" 
                                     ViewportSize="{TemplateBinding ViewportHeight}" 
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                     Width="5" MinWidth="5" MaxWidth="5"/>
                            <ScrollBar x:Name="PART_HorizontalScrollBar" 
                                     Grid.Row="1" 
                                     Orientation="Horizontal" 
                                     Value="{TemplateBinding HorizontalOffset}" 
                                     Maximum="{TemplateBinding ScrollableWidth}" 
                                     ViewportSize="{TemplateBinding ViewportWidth}" 
                                     Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                     Height="0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <vm:BindingProxy x:Key="DataContextProxy" Data="{Binding DataContext, ElementName=RootWindow}"/>
    </Window.Resources>

    <Grid Margin="15,15,15,60">
        <Border CornerRadius="12" Background="{DynamicResource WindowBackground}" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" FocusVisualStyle="{x:Null}" Margin="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
        </Border.Effect>
        
        <Grid> <!-- Content Container -->
            <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Search -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Shared Header -->
            <Grid Grid.Row="0" Margin="15,15,15,10" WindowChrome.IsHitTestVisibleInChrome="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left-side: Traffic Lights or Back Button -->
                <Grid Grid.Column="0">
                    <!-- Traffic Lights (Main Mode Only) -->
                    <StackPanel x:Name="TrafficLights" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditorActive}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <Button Command="{Binding CloseWindowCommand}" Style="{StaticResource TrafficLightButtonStyle}" Margin="0,0,2,0">
                            <Border Width="12" Height="12" CornerRadius="6" Background="#FF5F57" Cursor="Hand"/>
                        </Button>
                        <Button Command="{Binding MinimizeWindowCommand}" Style="{StaticResource TrafficLightButtonStyle}" Margin="0,0,2,0">
                            <Border Width="12" Height="12" CornerRadius="6" Background="#FFBD2E" Cursor="Hand"/>
                        </Button>
                        <Button Command="{Binding ToggleMaximizeCommand}" Style="{StaticResource TrafficLightButtonStyle}">
                            <Border Width="12" Height="12" CornerRadius="6" Background="#28C840" Cursor="Hand"/>
                        </Button>
                    </StackPanel>

                    <!-- Back Button (Editor Mode Only) -->
                    <Button Content="â€¹ Back" 
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Padding="8,4,8,4" Foreground="#718096" FontSize="14"
                            Command="{Binding CloseEditorCommand}"
                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                            FocusVisualStyle="{x:Null}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BackButtonBorder" 
                                                    Background="Transparent" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="BackButtonBorder" Property="Background" Value="#F0F2F5"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="BackButtonBorder" Property="Background" Value="#E2E8F0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditorActive}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Center: Tabs or Capsule Toggle -->
                <Grid Grid.Column="1">
                    <!-- Main Mode Tabs -->
                    <Border HorizontalAlignment="Center" Background="{DynamicResource TabBackground}" CornerRadius="18" Padding="3"
                            Visibility="{Binding IsEditorActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Notes" MinWidth="80" Command="{Binding SwitchToNotesCommand}" FocusVisualStyle="{x:Null}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentTab}" Value="Notes">
                                                <Setter Property="Background" Value="{DynamicResource TabActiveBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TabActiveForeground}"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="To-do" MinWidth="80" Command="{Binding SwitchToTodoCommand}" FocusVisualStyle="{x:Null}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentTab}" Value="Todo">
                                                <Setter Property="Background" Value="{DynamicResource TabActiveBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TabActiveForeground}"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Editor Mode Capsule Toggle -->
                    <Border HorizontalAlignment="Center" Background="{DynamicResource TabBackground}" CornerRadius="12" Padding="2"
                            Visibility="{Binding IsEditorActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Edit" MinWidth="80" Height="28" Command="{Binding SetEditModeCommand}" FocusVisualStyle="{x:Null}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="10,2"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPreviewMode}" Value="False">
                                                <Setter Property="Background" Value="{DynamicResource TabActiveBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TabActiveForeground}"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Preview" MinWidth="80" Height="28" Command="{Binding SetPreviewModeCommand}" FocusVisualStyle="{x:Null}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="10,2"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPreviewMode}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource TabActiveBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TabActiveForeground}"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Right-side: Settings/Refresh or Delete -->
                <Grid Grid.Column="2">
                    <!-- Main Mode Icons -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"
                                Visibility="{Binding IsEditorActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Button Style="{StaticResource HeaderButtonStyle}" Command="{Binding OpenSettingsCommand}" Margin="0,0,5,0" FocusVisualStyle="{x:Null}">
                            <Image Source="/Icons/setting-icon.png" Width="20" Height="20"/>
                        </Button>
                        <Button Style="{StaticResource HeaderButtonStyle}" Command="{Binding RefreshCommand}" FocusVisualStyle="{x:Null}">
                            <Image Source="/Icons/refresh-icon.png" Width="24" Height="24"/>
                        </Button>
                    </StackPanel>

                    <!-- Editor Mode Delete Button -->
                    <Button Grid.Column="2" Content="ðŸ—‘" Style="{StaticResource HeaderButtonStyle}"
                            HorizontalAlignment="Right"
                            Visibility="{Binding IsEditorActive, Converter={StaticResource BooleanToVisibilityConverter}}"
                            FontSize="18"
                            Command="{Binding DeleteItemCommand}"
                            FocusVisualStyle="{x:Null}"/>
                </Grid>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Search -->
                    <RowDefinition Height="*"/>    <!-- Content Area -->
                </Grid.RowDefinitions>

                <!-- Search Bar wrapper -->
                <Border Grid.Row="0" Background="{DynamicResource SearchBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="10,8" Margin="15,0,15,8"
                        Visibility="{Binding IsEditorActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/> <!-- Fixed width for icon -->
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ”" Foreground="#A0AEC0" VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="SearchBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" BorderThickness="0" 
                                 VerticalAlignment="Center" FontSize="14" Foreground="{DynamicResource TextPrimary}"
                                 CaretBrush="{DynamicResource PrimaryBrush}"
                                 Tag="Search titles or tags..."
                                 FocusVisualStyle="{x:Null}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <!-- Placeholder logic -->
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <!-- Simple Placeholder Overlay -->
                        <TextBlock Grid.Column="1" Text="Search titles or tags..." Foreground="{DynamicResource TextSecondary}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="2,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Content Area Wrapper -->
                <Grid Grid.Row="1">
                    <!-- Main Content (List) -->
                    <Border Background="Transparent" CornerRadius="8" Padding="0,0"
                            Visibility="{Binding IsEditorActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <ListBox x:Name="ItemsListBox" ItemsSource="{Binding FilteredItems}" 
                                 SelectedItem="{Binding SelectedItem}"
                                 Background="Transparent" BorderThickness="0"
                                 Padding="15,0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="False"
                                 HorizontalContentAlignment="Stretch"
                                 KeyboardNavigation.DirectionalNavigation="Contained"
                                 FocusVisualStyle="{x:Null}"
                                 AllowDrop="True"
                                 PreviewMouseLeftButtonDown="ItemsListBox_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="ItemsListBox_PreviewMouseMove"
                                 Drop="ItemsListBox_Drop">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" BorderThickness="0" Margin="0,5">
                                                <Grid>
                                                    <components:NoteCard DataContext="{Binding}" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu x:Name="ItemMenu">
                                            <ContextMenu.Resources>
                                                <TextBlock x:Key="CheckMarkIcon" x:Shared="False" Text="âœ“" Foreground="#38A169" FontWeight="Bold" FontSize="11" VerticalAlignment="Center" Margin="0,1,0,0"/>
                                            </ContextMenu.Resources>
                                            <MenuItem Header="Open with System" Command="{Binding Data.OpenInSystemEditorCommand, Source={StaticResource DataContextProxy}}"/>
                                            <MenuItem Header="Open in Explorer" Command="{Binding Data.OpenInExplorerCommand, Source={StaticResource DataContextProxy}}"/>

                                            <MenuItem Header="Tags" x:Name="TagsSubMenu">
                                                <MenuItem.ItemsSource>
                                                    <Binding Path="Tags"/>
                                                </MenuItem.ItemsSource>
                                                <MenuItem.ItemContainerStyle>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="Header" Value="{Binding}"/>
                                                        <Setter Property="Padding" Value="12,6"/>
                                                        <Setter Property="Command" Value="{Binding Data.RemoveTagCommand, Source={StaticResource DataContextProxy}}"/>
                                                        <Setter Property="CommandParameter" Value="{Binding}"/>
                                                        <Setter Property="Icon" Value="{StaticResource CheckMarkIcon}"/>
                                                    </Style>
                                                </MenuItem.ItemContainerStyle>
                                            </MenuItem>

                                            <MenuItem Header="Rename" Command="{Binding Data.StartRenameCommand, Source={StaticResource DataContextProxy}}"/>
                                            <MenuItem Header="Delete" Command="{Binding Data.DeleteItemCommand, Source={StaticResource DataContextProxy}}"/>

                                            <MenuItem Header="Settings" Command="{Binding Data.OpenSettingsCommand, Source={StaticResource DataContextProxy}}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding OpenDetailCommand}"/>
                            <KeyBinding Key="Delete" Command="{Binding DeleteItemCommand}"/>
                        </ListBox.InputBindings>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <components:NoteCard />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Editor View -->
                <Border Background="{DynamicResource WindowBackground}" CornerRadius="8" Padding="0" Margin="0,0,0,8"
                        Visibility="{Binding IsEditorActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <!-- Content Mode Switching -->
                        <Grid>
                            <!-- Edit Mode -->
                            <TextBox x:Name="EditorTextBox" 
                                     Text="{Binding EditorContent, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderThickness="0" Background="Transparent"
                                     FontSize="14" Foreground="{DynamicResource TextPrimary}"
                                     Padding="15,10,15,10"
                                     Visibility="{Binding IsPreviewMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                            <!-- Preview Mode (Virtualization Enabled) -->
                            <ListBox ItemsSource="{Binding PreviewBlocks}" 
                                     Visibility="{Binding IsPreviewMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.CanContentScroll="True"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.ScrollUnit="Pixel"
                                     VirtualizingPanel.VirtualizationMode="Recycling"
                                     Padding="15,0" Margin="0,0,0,20" 
                                     BorderThickness="0" Background="Transparent"
                                     HorizontalContentAlignment="Stretch">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,0,0,0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.Resources>
                                    <!-- Text Template -->
                                    <DataTemplate x:Key="TextTemplate">
                                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" TextAlignment="Justify"
                                                   FontSize="14" Foreground="{DynamicResource TextPrimary}" LineHeight="20"/>
                                    </DataTemplate>

                                    <DataTemplate x:Key="ImageTemplate">
                                        <Button Command="{Binding DataContext.OpenLinkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" Background="Transparent" Padding="0" BorderThickness="0" 
                                                Cursor="Hand" FocusVisualStyle="{x:Null}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Margin="0,5,0,5" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Stretch" CornerRadius="12">
                                                        <Grid>
                                                            <Border x:Name="ClipBorder" Background="White" CornerRadius="12"/>
                                                            <!-- IsAsync=True for non-blocking UI -->
                                                            <Image Source="{Binding ResolvedPath, Converter={StaticResource ImagePreviewConverter}, IsAsync=True}" 
                                                                   MaxWidth="800" Stretch="Uniform"
                                                                   HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality">
                                                                <Image.OpacityMask>
                                                                    <VisualBrush Visual="{Binding ElementName=ClipBorder}"/>
                                                                </Image.OpacityMask>
                                                            </Image>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>

                                    <!-- Link Template -->
                                    <DataTemplate x:Key="LinkTemplate">
                                        <Button Command="{Binding DataContext.OpenLinkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                     <TextBlock Text="{Binding Content}" TextDecorations="Underline" 
                                                                Foreground="{DynamicResource PrimaryBrush}" FontSize="14"/>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>

                                    <!-- Separator, Todo, etc. Templates (Preserved) -->
                                    <DataTemplate x:Key="SeparatorTemplate">
                                         <Border Height="2" Background="{DynamicResource TextSecondary}" HorizontalAlignment="Stretch" Margin="0,15" SnapsToDevicePixels="True"/>
                                    </DataTemplate>

                                    <DataTemplate x:Key="TodoTemplate">
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox x:Name="TodoCheck" IsHitTestVisible="False" Margin="0,0,8,0" VerticalAlignment="Top" Padding="0,2,0,0"/>
                                            <TextBlock Text="{Binding Content}" FontSize="14" Foreground="{DynamicResource TextPrimary}" 
                                                       VerticalAlignment="Center" TextWrapping="Wrap" LineHeight="20"/>
                                        </StackPanel>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding Target}" Value="Checked">
                                                <Setter TargetName="TodoCheck" Property="IsChecked" Value="True"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ListBox.Resources>

                                <!-- Template Selector via Style Triggers for ListBoxItem Content -->
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl Content="{Binding}">
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Type}" Value="Text">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource TextTemplate}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Image">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource ImageTemplate}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Link">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LinkTemplate}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Separator">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource SeparatorTemplate}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="TodoItem">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource TodoTemplate}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Selection Mode Indicator Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" Visibility="{Binding IsSelectionMode, Converter={StaticResource BooleanToVisibilityConverter}}" 
              VerticalAlignment="Bottom" Height="80" IsHitTestVisible="True" Background="Transparent">
            <!-- Floating Capsule Status Bar -->
            <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="22" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Padding="20,0,10,0" Height="44" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding SelectionStatusText}" Foreground="White" 
                               VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Margin="0,0,15,0"/>
                    <Button Command="{Binding CancelSelectionCommand}"
                            Background="#01000000" BorderThickness="0" Foreground="White" 
                            Width="32" Height="32" Cursor="Hand" FocusVisualStyle="{x:Null}">
                        <TextBlock Text="âœ•" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False"/>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="16">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BtnBorder" Property="Background" Value="#4A5568"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
            </Border>
        </Grid>

        </Grid>
        </Grid>
        </Border>
    </Grid>
</Window>
